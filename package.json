{
  "name": "gatsby-plugin-react-i18next",
  "version": "3.0.1",
  "description": "Easily translate your Gatsby website into multiple languages",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "Dmitriy Nevzorov <dmitriy.nevzorov@microapps.com>",
  "contributors": [
    "Josef Wittmann <josef.wittmann@tutanota.com>"
  ],
  "license": "MIT",
  "keywords": [
    "react",
    "gatsby",
    "gatsbyjs",
    "gatsby-plugin",
    "gatsby-component",
    "i18next",
    "react-i18next",
    "gatsby-i18n",
    "i18n",
    "i18next",
    "localization",
    "localisation",
    "translation",
    "translate"
  ],
  "repository": {
    "url": "https://github.com/Josef37/gatsby-plugin-react-i18next"
  },
  "files": [
    "dist",
    "index.js",
    "index.d.ts",
    "gatsby-browser.js",
    "gatsby-node.js",
    "gatsby-ssr.js"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build:ts": "babel src --out-dir dist --extensions .ts,.tsx",
    "build:defs": "tsc --declaration --outDir dist --emitDeclarationOnly",
    "dev": "babel -w src --out-dir dist --extensions .ts,.tsx",
    "prepare": "rimraf ./dist && npm run build:ts && npm run build:defs",
    "format": "prettier --write 'src/**/*.{js,jsx,json,ts,tsx,md}'",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@types/browser-lang": "^0.1.2",
    "@types/react": "^18.3.23",
    "babel-preset-gatsby-package": "^3.14.0",
    "gatsby": "^5.14.5",
    "i18next": "^25.3.2",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.6.1",
    "release-it": "^19.0.4",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "browser-lang": "^0.2.1",
    "outdent": "^0.8.0",
    "path-to-regexp": "^8.2.0"
  },
  "peerDependencies": {
    "gatsby": "^5.0.0",
    "i18next": ">= 19.0.0",
    "react": "^18.0.0 || ^0.0.0",
    "react-i18next": ">= 12.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx pretty-quick --staged"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run format",
        "npm run prepare"
      ]
    }
  }
}
